include.control          degree

control.ball             peernet.reports.BallExpansion
{
  protocol               cyclon
  n                      1
}

control.degree          peernet.reports.DegreeStats
{
  trace
  #step                  10 * CYCLE
  step                  CYCLE
  protocol              cyclon
  undir
  #at                    1000
  method                freq
}
